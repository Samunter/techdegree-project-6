extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | This project uses NodeJS to serve webpages demonstrating my proficiency with JavaScript over various previous projects.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`/static/images/project-${Number(project.id) + 1}-main.PNG`, width= 288, height= 288, alt="project snapshot")
            h5= project.project_name